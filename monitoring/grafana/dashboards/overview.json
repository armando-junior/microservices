{
  "dashboard": {
    "id": null,
    "uid": "overview",
    "title": "Microservices Overview",
    "tags": ["microservices", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Services Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\".*-service\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total HTTP Requests (Rate 5m)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=~\".*-service\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{service=~\".*-service\",status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total{service=~\".*-service\"}[5m])) by (service)) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Error Rate"
        }
      },
      {
        "id": 4,
        "title": "Response Time (avg)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "http_request_duration_seconds{service=~\".*-service\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "php_memory_usage_bytes{service=~\".*-service\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Business Metrics - Orders",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "orders_created_total",
            "legendFormat": "Created",
            "refId": "A"
          },
          {
            "expr": "orders_confirmed_total",
            "legendFormat": "Confirmed",
            "refId": "B"
          },
          {
            "expr": "orders_cancelled_total",
            "legendFormat": "Cancelled",
            "refId": "C"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "vertical"
        }
      },
      {
        "id": 7,
        "title": "Business Metrics - Products",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 20},
        "targets": [
          {
            "expr": "products_created_total",
            "legendFormat": "Created",
            "refId": "A"
          },
          {
            "expr": "products_low_stock",
            "legendFormat": "Low Stock",
            "refId": "B"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "vertical"
        }
      },
      {
        "id": 8,
        "title": "Business Metrics - Auth",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 20},
        "targets": [
          {
            "expr": "users_registered_total",
            "legendFormat": "Users",
            "refId": "A"
          },
          {
            "expr": "login_success_total",
            "legendFormat": "Logins OK",
            "refId": "B"
          },
          {
            "expr": "login_failed_total",
            "legendFormat": "Logins Failed",
            "refId": "C"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "vertical"
        }
      }
    ]
  },
  "overwrite": true
}

