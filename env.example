# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================

# Environment (local, staging, production)
APP_ENV=local
APP_DEBUG=true

# ==========================================
# RABBITMQ
# ==========================================

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# ==========================================
# REDIS
# ==========================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ==========================================
# DATABASES - PostgreSQL
# ==========================================

# Auth Service
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_DATABASE=auth_db
AUTH_DB_USERNAME=auth_user
AUTH_DB_PASSWORD=auth_pass

# Inventory Service
INVENTORY_DB_HOST=inventory-db
INVENTORY_DB_PORT=5432
INVENTORY_DB_DATABASE=inventory_db
INVENTORY_DB_USERNAME=inventory_user
INVENTORY_DB_PASSWORD=inventory_pass

# Sales Service
SALES_DB_HOST=sales-db
SALES_DB_PORT=5432
SALES_DB_DATABASE=sales_db
SALES_DB_USERNAME=sales_user
SALES_DB_PASSWORD=sales_pass

# Logistics Service
LOGISTICS_DB_HOST=logistics-db
LOGISTICS_DB_PORT=5432
LOGISTICS_DB_DATABASE=logistics_db
LOGISTICS_DB_USERNAME=logistics_user
LOGISTICS_DB_PASSWORD=logistics_pass

# Financial Service
FINANCIAL_DB_HOST=financial-db
FINANCIAL_DB_PORT=5432
FINANCIAL_DB_DATABASE=financial_db
FINANCIAL_DB_USERNAME=financial_user
FINANCIAL_DB_PASSWORD=financial_pass

# ==========================================
# API GATEWAY - Kong
# ==========================================

KONG_DATABASE=postgres
KONG_PG_HOST=gateway-db
KONG_PG_DATABASE=kong
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong

# ==========================================
# MONITORING
# ==========================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_PORT=16686

# Elasticsearch
ELASTICSEARCH_PORT=9200

# Kibana
KIBANA_PORT=5601

# ==========================================
# SERVICE URLS (Internal)
# ==========================================

AUTH_SERVICE_URL=http://auth-service:8000
INVENTORY_SERVICE_URL=http://inventory-service:8000
SALES_SERVICE_URL=http://sales-service:8000
LOGISTICS_SERVICE_URL=http://logistics-service:8000
FINANCIAL_SERVICE_URL=http://financial-service:8000
NOTIFICATION_SERVICE_URL=http://notification-service:8000

# ==========================================
# JWT CONFIGURATION
# ==========================================

JWT_SECRET=your-secret-key-change-this-in-production
JWT_TTL=3600

